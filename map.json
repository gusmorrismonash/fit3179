{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Properties in Melbourne",
    "projection": {"type": "mercator"},
    "config": {
        "background": "aliceblue",
        "style": {
          "cell": {
            "stroke": "transparent"
          }
        }
    },
    "layer": [
        {
        "data": {
            "url": "data/vic_localities.json",
            "format": {"type": "topojson", "feature": "vic_localities"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
            "data": {
                "url":"data/Melbourne_housing_FULL.csv"
            },
            "mark": {"type": "circle", "tooltip": {"content": "data"}, "size": 5},
            "encoding": {
                "longitude": {"field": "Longtitude", "type":"quantitative"},
                "latitude": {"field": "Lattitude", "type":"quantitative"},
                "tooltip":[
                    {"field": "Address", "type": "nominal"},
                    {"field": "Suburb", "type": "nominal"},
                    {"field": "Price", "type": "quantitative"},
                    {"field": "Landsize", "type": "quantitative"},
                    {"field": "Distance", "type": "quantitative"}
                ],
                "color": {
                    "field": "Price",
                    "type": "quantitative",
                    "scale": {"scheme":"yelloworangered","domainMid": 3000000},
                    "legend": {
                        "orient": "none",
                        "direction": "horizontal",
                        "legendX": 85,
                        "legendY": 530,
                        "fillColor": "white",
                        "padding": 5,
                        "gradientLength": 200,
                        "strokeColor": "grey",
                        "cornerRadius": 5
                    }
                }
            }
        }
    ]
    
}
